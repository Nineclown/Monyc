<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.nineclown.monyc.join.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:id="@+id/fsu_Email_Box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/fsu_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fsu_et_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/fsu_tv_email"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fsu_tv_email"
                android:background="@null"
                android:gravity="right"
                android:inputType="textEmailAddress"
                android:textSize="16dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/fsu_underline_1"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_below="@id/fsu_Email_Box"
            android:layout_centerHorizontal="true"
            android:src="@drawable/underline" />

        <TextView
            android:id="@+id/fsu_tv_confirm_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fsu_Email_Box"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="confirm email"
            android:textColor="@color/gray" />

        <RelativeLayout
            android:id="@+id/fsu_Password_Box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fsu_tv_confirm_email"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/fsu_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fsu_et_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/fsu_tv_password"
                android:layout_toRightOf="@+id/fsu_tv_password"
                android:background="@null"
                android:gravity="right"
                android:inputType="textPassword"
                android:textSize="16dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fsu_underline_2"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_below="@id/fsu_Password_Box"
            android:layout_centerHorizontal="true"
            android:src="@drawable/underline" />

        <TextView
            android:id="@+id/fsu_tv_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fsu_Password_Box"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="confirm email"
            android:textColor="@color/gray" />

        <RelativeLayout
            android:id="@+id/fsu_Confirm_Password_Box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fsu_underline_2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/fsu_tv_confirm_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Confirm_password"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fsu_et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/fsu_tv_confirm_password2"
                android:layout_toRightOf="@+id/fsu_tv_confirm_password2"
                android:background="@null"
                android:gravity="right"
                android:inputType="textPassword"
                android:textSize="16dp" />

        </RelativeLayout>


        <Button
            android:id="@+id/fsu_bt_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/black"
            android:text="sign up"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>
