<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">


        <RelativeLayout
            android:id="@+id/irv_left_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/irv_category_box"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/main_date_bg_b">

                <TextView
                    android:id="@+id/irv_tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="의료/건강"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/irv_tv_date"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/irv_category_box"
                android:textColor="@color/black"
                android:textSize="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/irv_right_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/irv_left_box">

            <TextView
                android:id="@+id/irv_tv_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/irv_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#78B2F9"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/irv_tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/irv_tv_contents"
                android:layout_below="@+id/irv_tv_contents"
                android:layout_marginTop="10dp"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>